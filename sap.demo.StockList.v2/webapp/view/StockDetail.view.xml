<mvc:View
	controllerName="sap.demo.StockList.controller.StockDetail"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.commons"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	
	<App>
		<pages>
			<Page
				id="stockListMainDetailPage"
				title="{i18n>DETAIL_TITLE}（{detailData>/UserSiteName}）"
				showNavButton="false"
				navButtonPress="handleNavBack"
			>
				<content>
					<core:Fragment fragmentName="sap.demo.StockList.view.fragment.stockDetail.StockListForProduct" type="XML" />
				</content>
				<footer>
					<core:Fragment fragmentName="sap.demo.StockList.view.fragment.stockDetail.FooterContentForStockDetail" type="XML" />
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>