<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.demo.StockList.controller.StockTransfer"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page
				id="mainStockTransferPage"
				title="{i18n>STOCK_TRS_TITLE}（{stockTransferData>/UserSiteName}）"
				showNavButton="true"
				navButtonPress="handleNavBack"
			>
				<content>
					<Table
                        id="stockListTblStockTransfer"
						fixedLayout="false"
                        noDataText="{i18n>COM_NODATA_TEXT}"
                        mode="None"
                        visible="true"
                        items="{
                            path: 'stockTransferData>/OrderProduct'
                        }"
                    >
						<columns>
							<core:Fragment fragmentName="sap.demo.StockList.view.fragment.stockTransfer.Columns" type="XML" />
						</columns>
						<items>
							<core:Fragment fragmentName="sap.demo.StockList.view.fragment.stockTransfer.ColumnListItem" type="XML" />
						</items>
					</Table>
				</content>
				<footer>
					<core:Fragment fragmentName="sap.demo.StockList.view.fragment.Common.FooterContent" type="XML" />
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>