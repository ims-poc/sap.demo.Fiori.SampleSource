<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Toolbar id="orderProductsToolbarFooter" width="100%">
		<HBox width="25%" />
		<HBox width="50%" justifyContent="Center">
			<Button id="orderProductsButtonLess" icon="sap-icon://less" press="onLessButtonPress" />
			<HBox width="40%" />
			<Button id="orderProductsButtonAdd" icon="sap-icon://add" press="onAddButtonPress" />
		</HBox>
		<HBox id="orderProductsHBoxSave" width="25%" justifyContent="End" visible="true" >
			<Button id="orderProductsButtonSave" type="Accept" text="保存" press="onSave" visible="true" />
		</HBox>
	</Toolbar>
</core:FragmentDefinition>