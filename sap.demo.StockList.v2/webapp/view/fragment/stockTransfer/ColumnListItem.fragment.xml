<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<ColumnListItem id="ColListItm" vAlign="Top">
        <cells>
            <VBox>
                <Text text="{stockTransferData>Product}" id="stockListTxtProduct" />
                <Text text="{stockTransferData>ProductName}" id="stockListTxtProductName" />
                <Text text="{stockTransferData>ProductForSupplier}" id="stockListTxtProductIDForSupplier" />
            </VBox>
            <Text id="stockListTxtProductColor" text="{stockTransferData>ProductColor}" />
            <Text id="stockListTxtProductSize" text="{stockTransferData>ProductSize}" />
            <Input
				id="stockListInputSupplierSite"
				value="{stockTransferData>SupplierSiteName}"
				showValueHelp="true"
				valueHelpOnly="true"
				valueHelpRequest="onValueHelpRequestForSupplierSite"
				enabled="false"
            />
            <HBox justifyContent="End">
                <Input
					id="stockListInputProductOrder"
					type="Number"
					textAlign="Right"
					showValueStateMessage="false"
                    value="{stockTransferData>ProductOrder}"
                    width="4em"
                    change="onOrderQuantityChange"
                    liveChange="onOrderQuantityLiveChange"
                />
                <HBox width="0.5em" />
                <Text id="stockListTxtQuantityUnit" width="2em" text="{stockTransferData>ProductOrderUnit}" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
            </HBox>
            <Text id="stockListTxtStockQuantity"
				text="{
					path : 'stockTransferData>ProductStock',
					formatter : 'sap.demo.StockList.util.common.setCammaForNumber'
				} {stockTransferData>ProductStockUnit}"
            />
            <Text id="stockListTxtAllocatedQuantity"
				text="{
					path : 'stockTransferData>ProductAllocated',
					formatter : 'sap.demo.StockList.util.common.setCammaForNumber'
				} {stockTransferData>ProductAllocatedUnit}" />
			<u:Currency value="{stockTransferData>ProductPrice}" currency="{stockTransferData>Currency}" useSymbol="false" maxPrecision="1" />
        </cells>
    </ColumnListItem>
</core:FragmentDefinition>