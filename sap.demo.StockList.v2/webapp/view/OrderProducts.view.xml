<mvc:View
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	controllerName="sap.demo.StockList.controller.OrderProducts"
	xmlns:html="http://www.w3.org/1999/xhtml"
>
	<App>
		<pages>
			<Page
				id="mainOrderProductPage"
				title="{i18n>ORDER_PRD_TITLE}（{orderData>/UserSiteName}）"
				showNavButton="true"
				navButtonPress="handleNavBack"
			>
				<content>
					<Table
                        id="stockListTblOrderProducts"
						fixedLayout="false"
                        noDataText="{i18n>COM_NODATA_TEXT}"
                        mode="None"
                        visible="true"
                        items="{
                            path: 'orderData>/OrderProduct'
                        }"
                    >
						<columns>
                            <core:Fragment fragmentName="sap.demo.StockList.view.fragment.orderProducts.Columns" type="XML" />
                        </columns>
                        <items>
                            <core:Fragment fragmentName="sap.demo.StockList.view.fragment.orderProducts.ColumnListItem" type="XML" /> 
                        </items>
					</Table>
				</content>
				<footer>
                    <core:Fragment fragmentName="sap.demo.StockList.view.fragment.Common.FooterContent" type="XML" />
                </footer>
			</Page>
		</pages>
	</App>
</mvc:View>