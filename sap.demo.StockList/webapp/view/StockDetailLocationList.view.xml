				navButtonPress="handleNavBack"
			>
				<content>
					<!--<core:Fragment fragmentName="sap.demo.StockList.view.StockListDetailProductInformation" type="XML" />-->
					<core:Fragment fragmentName="sap.demo.StockList.view.StockListForLocation" type="XML" />
				</content>
				<footer>
					<core:Fragment fragmentName="sap.demo.StockList.view.FooterContentForStockDetailLoc" type="XML" />
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>