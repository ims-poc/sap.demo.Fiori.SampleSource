	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
	
	<App>
		<pages>
			<Page
				id="stockListMainDetailLocationPage"
				title="{i18n>DETAIL_LOC_TITLE}（{detailLocData>/UserSiteName}）"
