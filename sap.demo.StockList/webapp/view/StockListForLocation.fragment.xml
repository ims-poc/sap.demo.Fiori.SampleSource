<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table
		id="stockListTblStockForLocation"
		noDataText="{i18n>COM_NODATA_TEXT}"
		includeItemInSelection="true"
		fixedLayout="false"
		items="{
            path: 'listData>/StockListForLocation'
        }"
	>
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>DETAIL_LOC_TBL_TITLE} {detailData>/SiteName}" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
            <Column id="stockListTblColSite">
                <Label text="{i18n>DETAIL_LOC_TBL_HEADER_INSITE}" />
            </Column>
            <Column id="stockListTblColQuantity" hAlign="Right">
                <Label text="{i18n>DETAIL_LOC_TBL_HEADER_QUANTITY}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
				id="stockListColListItmSite"
				vAlign="Middle"
			>
                <cells>
					<Text id="stockListTxtSiteName" text="{listData>InternalSiteName}" wrapping="true" />
                    <Text id="stockListTxtQuantity"
						text="{
							path : 'listData>StockQuantity',
							formatter : 'sap.demo.StockList.util.common.setCammaForNumber'
						} {listData>ProductStockUnit}" wrapping="true" />
                </cells>
            </ColumnListItem>
        </items>
	</Table>
</core:FragmentDefinition>