<mvc:View
	controllerName="sap.demo.ConfirmChangePrice.controller.ChangePriceList"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
>

	<App>
		<pages>
			<Page
				id="mainListPage"
				title=""
			>
				<headerContent>
					<Button id="shippingInstructionButtonUp" icon="sap-icon://media-reverse" press="onUpPress" tooltip="前ページ" enabled="false" />
                    <Button id="shippingInstructionButtonDown" icon="sap-icon://media-play" press="onDownPress" tooltip="次ページ" enabled="false" />
					<Button id="confirmChangePriceBtnSelectStore" icon="sap-icon://value-help" tooltip="サイト切替" press="onValueHelpRequestForSite" />
				</headerContent>
				<content>
					<!-- ValueHelpDialogがFilterBarが存在しないと動かないため、作るだけ作る -->
					<fb:FilterBar visible="false" />
					<!--<RadioButtonGroup id="confirmChangePriceRadGrpPrinted" columns="2" width="100%" select="setFilter" >-->
					<!--	<buttons>-->
					<!--		<RadioButton id="confirmChangePriceRadBtnPrintedHidden" text="{i18n>LIST_PAGE_PRINT_HIDDEN_TEXT}"  />-->
					<!--		<RadioButton id="confirmChangePriceRadBtnPrintedVisible" text="{i18n>LIST_PAGE_PRINT_VISIBLE_TEXT}" />-->
					<!--	</buttons>-->
					<!--</RadioButtonGroup>-->
					<Table
						id="confirmChangePriceTblPriceList"
						noDataText="{i18n>COM_NODATA_TEXT}"
						growing="false"
						mode="None"
						items="{
                            path: 'tblData>/changeRequestForPrice'
                        }"
					>
						<headerToolbar>
							<Toolbar>
								<core:Fragment fragmentName="sap.demo.ConfirmChangePrice.view.fragment.TableHeaderForListPage" type="XML" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<core:Fragment fragmentName="sap.demo.ConfirmChangePrice.view.fragment.TableColumnsForListPage" type="XML" />
						</columns>
						<items>
							<core:Fragment fragmentName="sap.demo.ConfirmChangePrice.view.fragment.TableItemsForListPage" type="XML" />
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>