<mvc:View
	controllerName="sap.demo.ConfirmTransfer.controller.shippingInstructionDetail"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
>

	<App>
		<pages>
			<Page
				id="mainPageDetail"
				title="{i18n>DETAIL_PAGE_TITLE} （{TransferData>/UserSiteName}） 出荷先：{TransferData>/ShipToSiteNm}"
				showNavButton="true"
				navButtonPress="handleNavBack">
				<content>
					<Table
						id="shippingInstructionDetailList"
						noDataText="{i18n>COM_TABLE_NODATA_TEXT}"
						mode="None"
						includeItemInSelection="false"
						fixedLayout="false"
						items="{
                            path: 'mockData>/ShippingInstructionDetail'
                        }"
					>
						<headerToolbar>
							<Toolbar>
								<Label
									text="総点数：{
										path : 'TransferData>/SumOfQuantity',
										formatter : 'sap.demo.ConfirmTransfer.util.Formatter.setCammaForNumber'
									} {mockData>ProductStockUnit}" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column id="shippingInstructionDetailTblColItemNo">
                            	<header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_ITEM_NO}" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColProduct">
                            	<header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_PRODUCTNAME}" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColProductName">
                            	<header>
                                	<Label text="" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColColor">
                            	<header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_COLOR}" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColSize">
                                <header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_SIZE}" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColStock" hAlign="Right">
                                <header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_STOCK}" />
                                </header>
                            </Column>
                            <Column id="shippingInstructionDetailTblColPrice" hAlign="Right">
                                <header>
                                	<Label text="{i18n>DETAIL_TABLE_HEADER_PRICE}" />
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
								id="shippingInstructionDetailColListItm"
								vAlign="Middle"
								type="Inactive">
								<cells>
									<!--<VBox id="shippingInstructionDetailVProduct">-->
									<!--	<Text id="shippingInstructionDetailProductId" text="{mockData>Product}" wrapping="true" />-->
									<!--	<Text id="shippingInstructionDetailProductName" text="{mockData>ProductName}" wrapping="true" />-->
									<!--</VBox>-->
									<Text id="shippingInstructionTxtItemNo" text="{mockData>ItemNo}" />
									<Text id="shippingInstructionDetailProduct" text="{mockData>Product}" wrapping="true" />
									<Text id="shippingInstructionDetailProductName" text="{mockData>ProductName}" wrapping="true" />
                                    <Text id="shippingInstructionDetailProductColor" text="{mockData>ProductColor}" wrapping="true" />
                                    <Text id="shippingInstructionDetailProductSize" text="{mockData>ProductSize}" wrapping="true" />
                                    <Text id="shippingInstructionTxtProductStock"
										text="{
											path : 'mockData>ProductStock',
											formatter : 'sap.demo.ConfirmTransfer.util.Formatter.setCammaForNumber'
										} {mockData>ProductStockUnit}" />
                                    <u:Currency id="shippingInstructionCurProductPrice" value="{mockData>ProductPrice}" currency="{mockData>Currency}" useSymbol="false" maxPrecision="1" />
                                </cells>
                            </ColumnListItem>
                        </items>
					</Table>
				</content>
				<footer>
                    <core:Fragment fragmentName="sap.demo.ConfirmTransfer.view.FooterContent" type="XML" />
                </footer>
			</Page>
		</pages>
	</App>
</mvc:View>