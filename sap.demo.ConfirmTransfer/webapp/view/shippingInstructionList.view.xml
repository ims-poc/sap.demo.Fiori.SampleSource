<mvc:View
	controllerName="sap.demo.ConfirmTransfer.controller.shippingInstructionList"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
>

	<App>
		<pages>
			<Page
				id="mainPageList"
				title=""
				showNavButton="false"
				navButtonPress="handleNavBack"
				enableScrolling="true"
			>
			
				<headerContent>
					<Button id="shippingInstructionBtnSelectStore" icon="sap-icon://value-help" tooltip="Select Store" press="onValueHelpRequest" />
				</headerContent>
				
				<content>
					<RadioButtonGroup id="shippingRadioPrint" columns="2" width="100%" select="setFilter" >
						<buttons>
							<RadioButton id="radBtnPrintedHidden" text="{i18n>LIST_PRINT_HIDDEN_TEXT}"  />
							<RadioButton id="radBtnPreprintVisible" text="{i18n>LIST_PRINT_VISIBLE_TEXT}" />
						</buttons>
					</RadioButtonGroup>
					<Table
						id="shippingInstructionList"
						backgroundDesign="Translucent"
						noDataText="{i18n>COM_TABLE_NODATA_TEXT}"
						growing="false"
						growingThreshold="10"
						busyIndicatorDelay="1"
						mode="MultiSelect"
						includeItemInSelection="true"
						fixedLayout="false"
						items="{
                            path: 'mockData>/ShippingInstruction'
                        }"
					>
						<headerToolbar>
							<Toolbar>
								<HBox width="100%">
									<HBox width="90%">
										<Label text="絞込：" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
										<FacetFilter
											id="shippingInstructionFacetFilter"
											type="Simple"
											lists="{mockData>/Filters}"
											liveSearch="true"
											showPersonalization="false"
											showReset="true"
											reset="onFacetFilterReset">
											<lists>
												<FacetFilterList
													title="{mockData>Category}"
													growing="false"
													items="{mockData>values}"
													key="{mockData>FilterKey}"
													listOpen="onFacetFilterListOpen"
													listClose="setFilter">
													<items>
														<FacetFilterItem
															key="{mockData>data}"
															text="{mockData>text}"
														/>
													</items>
												</FacetFilterList>
											</lists>
										</FacetFilter>
									</HBox>
									<HBox width="10%" justifyContent="End">
										<Button id="shipppingInstructionBtnTblSort" icon="sap-icon://drop-down-list" press="onPressSortDialog" tooltip="Sort" />
									</HBox>
								</HBox>
							</Toolbar>
						</headerToolbar>
						<columns>
                            <Column id="shippingInstructionTblColPrintResult" hAlign="Center">
                                <Label text="{i18n>LIST_TABLE_HEADER_PRINT_RESULT}" />
                            </Column>
                            <Column id="shippingInstructionTblColShippingInstructionNo">
                                <Label text="{i18n>LIST_TABLE_HEADER_SHIPPING_INSTRUCTION_NO}" />
                            </Column>
                            <Column id="shippingInstructionTblColPurchaseGrp">
								<header>
									<Label text="{i18n>LIST_TABLE_HEADER_PURCHASE_GRP}" />
								</header>
                            </Column>
                            <Column id="shippingInstructionTblColShipDate">
								<Label text="{i18n>LIST_TABLE_HEADER_SHIP_DATE}" />
                            </Column>
                            <Column id="shippingInstructionTblColShipToSite">
								<Label text="{i18n>LIST_TABLE_HEADER_SHIP_TO_SITE}" />
                            </Column>
                            <Column hAlign="Right">
                            	<Label text="{i18n>LIST_TABLE_HEADER_SUMOFQUANTITY}" />
                            </Column>
                            <Column id="shippingInstructionTblColRegisterUser">
                                <Label text="{i18n>LIST_TABLE_HEADER_REGISTER_USER}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
								id="shippingInstructionColListItm"
								vAlign="Middle">
                                <cells>
                                    <!--<Text id="shippingInstructionPrintResult" text="{mockData>PrintedResult}" />-->
                <!--                    <Text id="shippingInstructionPrintResult"-->
                <!--                    	text="{-->
                <!--                    		parts: ['mockData>PrintedResult'],-->
								   	    <!--	formatter:'sap.demo.ConfirmTransfer.util.Formatter.getPrintResultText'-->
								   	    <!--}"-->
                <!--                    />-->
         <!--                           <CheckBox id="shippingInstructionPrintResult" text="" enabled="false"-->
	        <!--                            selected="{-->
									<!--		parts: ['mockData>PrintedResult'],-->
									<!--		formatter:'sap.demo.ConfirmTransfer.util.Formatter.getPrintResultText'-->
									<!--	}"-->
									<!--/>-->
                                    <Text text="{mockData>PrintedResult}" />
                                    <Link id="shippingInstructionNo" text="{mockData>ShippinngInstructionNo}" wrapping="true" press="navigate" />
                                    <!--<Text id="shippingInstructionNo" text="{mockData>ShippinngInstructionNo}" wrapping="true" />-->
                                    <Text id="shippingInstructionPurchaseGrp" text="{mockData>PurchaseGrpNm}" wrapping="true" />
                                    <Text id="shippingInstructionShipDate" text="{mockData>ShipDate}" wrapping="true" />
                                    <Text id="shippingInstructionShipToSite" text="{mockData>ShipToSiteNm}" wrapping="true" />
                                    <Text id="shippingInstructionSumOfQuantity"
                                    	text="{
                                    		path : 'mockData>SumOfQuantity',
                                    		formatter : 'sap.demo.ConfirmTransfer.util.Formatter.setCammaForNumber'
                                    	}" />
                                    <Text id="shippingInstructionRegisterUser" text="{mockData>RegisterUserNm}" wrapping="true" />
                                </cells>
                            </ColumnListItem>
                        </items>
					</Table>
				</content>
				<footer>
                    <core:Fragment fragmentName="sap.demo.ConfirmTransfer.view.FooterContent" type="XML" />
                </footer>
			</Page>
		</pages>
	</App>
</mvc:View>