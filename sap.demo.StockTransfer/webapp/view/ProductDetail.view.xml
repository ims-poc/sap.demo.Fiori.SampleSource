                <content>
                    <HBox width="100%" justifyContent="SpaceBetween" alignItems="Start" id="stockTransferHBoxHeader">
                        <VBox id="orderProductsVBoxProduct" width="60%">
							<Panel width="100%" class="sapRTSTOrdProdPanelCalendar" id="orderProductsPanelCalendar" headerText="{i18n>TITLE_PRODUCT_DETAIL}">
								<ObjectHeader title="{transferData>/ProductName}" id="orderProductsOHProduct">
									<attributes>
										<ObjectAttribute id="orderProductsObjAttrProductID" text="{transferData>/Product}" />
									</attributes>
								</ObjectHeader>
								<ObjectHeader>
									<attributes>
										<ObjectAttribute id="orderProductsObjAttrProductColor" title="{i18n>TITLE_PRODUCT_COLOR}" text="{transferData>/ProductColor}" />
										<ObjectAttribute id="orderProductsObjAttrProductSize" title="{i18n>TITLE_PRODUCT_SIZE}" text="{transferData>/ProductSize}" />
										<ObjectAttribute id="orderProductsObjAttrSalesPrice" title="{i18n>TITLE_SALES_PRICE}" text="{transferData>/ProductPrice} {transferData>/Currency}" />
										<ObjectAttribute id="orderProductsObjAttrStock" title="{i18n>TITLE_STOCK_QUANTITY}" text="{transferData>/ProductStock} {transferData>/ProductStockUnit}" />
										<ObjectAttribute id="orderProductsObjAttrTradeCond" title="{i18n>TITLE_TRADE_CONDITION}" text="{transferData>/TradeCondition}" />
										<ObjectAttribute id="orderProductsObjAttrComCd" title="{i18n>TITLE_COMMODITY_CODE}" text="{transferData>/CommodityCode}" />
									</attributes>
								</ObjectHeader>
							</Panel>
                        </VBox>
                        <VBox alignItems="Start" width="40%" id="StockTransferVBoxQuantity">
							<Panel width="25em" headerText="{i18n>TITLE_ORDER_INFORMATION}">
								<HBox>
									<Label text="{i18n>TITLE_ORDER_QUANTITY}" id="stockTransferLabelOrderQuantity" width="18em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
									<Input id="stockTransferInputOrderQuantity" type="Number" maxLength="4" width="4rem" textAlign="Right" showValueStateMessage="false" value="{transferData>/ProductOrder}" change="onOrderQuantityChange" liveChange="onOrderQuantityLiveChange" />
									<Text id="stockTransferTextSpace" text="" width="0.5rem" />
									<Text id="stockTransferTextUnit" text="{transferData>/ProductOrderUnit}" width="2em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
	                            </HBox>
	                            <HBox>
									<Text text="{i18n>TITLE_SUPPLIER_SITE}" id="StockTransferSupplierSite" width="8em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
									<MultiInput id="stockTransferSupplierSiteInput" valueHelpRequest="onValueHelpRequest" width="15em" />
								</HBox>
								<HBox>
	                            	<Label text="{i18n>TITLE_PRODUCT_INSPECTION}" id="StockTransferInspection" width="8em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
	                            	<ComboBox id="StockTransferInspectionCombo" width="15em">
										<core:Item key="IN001" text="検品場所01" />
										<core:Item key="IN002" text="検品場所02" />
										<core:Item key="IN003" text="検品場所03" />
										<core:Item key="IN004" text="検品場所04" />
										<core:Item key="IN005" text="検品場所05" />
									</ComboBox>
	                            </HBox>
	                            <HBox>
	                            	<Label text="{i18n>TITLE_RACK_NO}" id="stockTransferRackNo" width="8em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
	                            	<Input id="stockTransferRackNoInput" type="Number" textAlign="Right" maxLength="10" width="15em" />
	                            </HBox>
                            </Panel>
                        </VBox>
