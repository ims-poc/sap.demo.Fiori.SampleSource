<mvc:View
	controllerName="sap.demo.OrderProducts.controller.ProductConfirm"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
	
	<App>
		<pages>
			<Page title="{i18n>DETAIL_PAGE_TITLE} （{transferData>/UserSiteName}）" showNavButton="true" navButtonPress="handleNavBack">
                <content>
                    <Table
                        id="orderProductsTableProducts"
                        inset="false"
                        growing="true"
						growingThreshold="1000"
						busyIndicatorDelay="500"
						enableBusyIndicator="true"
						fixedLayout="false"
                        noDataText="No Data"
                        showUnread="true"
                        mode="SingleSelectMaster"
                        visible="true"
                        selectionChange="onSelectionChange"
                        growingScrollToLoad="false"
                        updateFinished="onListUpdateFinished"
                        items="{
                            path: 'listData>/ProductCollection'
                        }"
                    >
                        <columns>
                            <Column vAlign="Middle" id="orderProductsColumnProduct">
                                <Label text="{i18n>TITLE_PRODUCT}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnProductColor">
                            	<Label text="{i18n>TITLE_PRODUCT_COLOR}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnProductSize">
                            	<Label text="{i18n>TITLE_PRODUCT_SIZE}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnOrderQuantity">
                                <Label text="{i18n>TITLE_ORDER_QUANTITY}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnStockQuantity">
                                <Label text="{i18n>TITLE_STOCK_QUANTITY}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnScheduledQuantity">
                                <Label text="{i18n>TITLE_SCHEDULED_QUANTITY}" />
                            </Column>
                            <Column vAlign="Middle" id="orderProductsColumnSalesPrice">
                                <Label text="{i18n>TITLE_SALES_PRICE}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="ColListItm" vAlign="Top">
                                <cells>
                                    <VBox id="orderProductsVBoxProductAttributes">
                                        <Link text="{listData>ProductName}" id="orderProductsTextProductName" wrapping="true" press="navigate" />
                                        <Text text="{listData>Product}" id="orderProductsTextProductID" />
                                    </VBox>
                                    <Text id="orderProductsTextProductColor" text="{listData>ProductColor}" />
                                    <Text id="orderProductsTextProductSize" text="{listData>ProductSize}" />
                                    <HBox id="orderProductsHBoxOrderQuantityTablet" justifyContent="Start">
                                        <Text id="orderProductsInputProductOrder" textAlign="Right" text="{listData>ProductOrder}" width="4em" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
                                        <HBox width="0.5em" />
                                        <Text id="orderProductsTextQuantityUnitTablet" wrapping="false" text="{listData>ProductOrderUnit}" class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
                                    </HBox>
                                    <Text id="orderProductsTextStockQuantity" text="{listData>ProductStock} {listData>ProductStockUnit}" />
                                    <Text id="orderProductsTextScheduledQuantity" text="{listData>ProductScheduledStock} {listData>ProductScheduledStockUnit}" />
                                    <Text id="orderProductsTextSalesPrice" text="{listData>ProductPrice} {listData>Currency}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
                <footer>
                    <core:Fragment fragmentName="sap.demo.OrderProducts.view.FooterContent" type="XML" />
                </footer>
            </Page>
		</pages>
	</App>
</mvc:View>