<mvc:View
	controllerName="sap.demo.ConfirmTransfer.controller.shippingInstructionDetail"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
>

	<App>
		<pages>
			<Page
				id="mainPageDetail"
				title="{i18n>DETAIL_PAGE_TITLE} （{TransferData>/UserSiteName}） 出荷先：{TransferData>/ShipToSiteNm}"
				showNavButton="true"
				navButtonPress="handleNavBack">
				<content>
					<Table
						id="shippingInstructionDetailList"
						noDataText="{i18n>COM_TABLE_NODATA_TEXT}"
						mode="None"
						includeItemInSelection="false"
						fixedLayout="false"
						items="{
                            path: 'mockData>/ShippingInstructionDetail'
                        }"
					>
						<headerToolbar>
							<Toolbar>
								<Label
									text="総点数：{
										path : 'TransferData>/SumOfQuantity',
										formatter : 'sap.demo.ConfirmTransfer.util.Formatter.setCammaForNumber'
									} {mockData>ProductStockUnit}" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<core:Fragment fragmentName="sap.demo.ConfirmTransfer.view.fragment.DetailTblColumns" type="XML" />
                        </columns>
                        <items>
                            <core:Fragment fragmentName="sap.demo.ConfirmTransfer.view.fragment.DetailTblColumnListItem" type="XML" />
                        </items>
					</Table>
				</content>
				<footer>
                    <core:Fragment fragmentName="sap.demo.ConfirmTransfer.view.fragment.FooterContent" type="XML" />
                </footer>
			</Page>
		</pages>
	</App>
</mvc:View>