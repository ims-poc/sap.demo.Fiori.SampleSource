<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Toolbar id="orderProductsToolbarFooter" width="100%">
			<!--<Button id="orderProductsButtonScan" width="25%"-->
			<!--	icon="sap-icon://bar-code" press="onScanButtonPress" />-->
			<HBox width="25%" />
			<HBox width="50%" justifyContent="Center">
				<Button id="orderProductsButtonLess" icon="sap-icon://less" press="onLessButtonPress" />
				<HBox width="40%" />
				<Button id="orderProductsButtonAdd" icon="sap-icon://add" press="onAddButtonPress" />
			</HBox>
			<HBox id="orderProductsHBoxConfirm" width="25%" justifyContent="End" visible="true">
				<Button id="orderProductsButtonConfirm" type="Accept" text="確認" press="onConfirm" visible="true" />
			</HBox>
			<HBox id="orderProductsHBoxSave" width="25%" justifyContent="End" visible="false">
				<Button id="orderProductsButtonCancel" type="Reject" text="中止" press="onCancel" visible="false" />
				<Button id="orderProductsButtonSave" type="Accept" text="保存" press="onSave" visible="false" />
			</HBox>
			<!--icon="sasp=icon://save" />-->
				
			<!--<Button id="orderProductsButtonAction" width="25%"-->
